<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Импорт xml конфигурации из отдельных файлов-->
    <!--
        Не рекамендуеться обращаться к каталогу на порядок выше "../"
        так как, если начальный каталог задается classpath, то таких каталогов может
        быть несколько в фаловой стистемы и такой переход может вызвать проблемы
    -->
    <import resource="..."/>

    <!--
    class - параметр класса java в бине
    name ( id ) - идентификатор бина в контейнере
    scope - область видимости
    autowire - настройка авто интеграции бина
    lazy-init - отложенный конструктор бина
    factory-method - фабричный метода
    destroy-method - метод очистки бина
    -->
    <bean id="..." class="..." >

        <!--
         <constructor-arg> - аргументы конструтора\фабричного метода
         <properties> - свойства бина


         -->
    </bean>

    <!-- Формирует доп. ссылку на бин -->
    <alias name="fromName" alias="toName"/>

    <bean name="..." class="..." >
        <!-- Обьявление и конфигурация бина-->
    </bean>
    <!-- продолжения описание бинов... -->
</beans>
